<persistence
	xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
	xmlns="http://xmlns.jcp.org/xml/ns/persistence"
	xsi:schemaLocation="http://xmlns.jcp.org/xml/ns/persistence http://xmlns.jcp.org/xml/ns/persistence/persistence_2_2.xsd"
	version="2.2">
	<!-- DefiniciÃ³n del deployment -->
	<persistence-unit name="miniBankPU"
		transaction-type="RESOURCE_LOCAL">
		<provider>org.hibernate.jpa.HibernatePersistenceProvider</provider>
		<class>org.cursobbva.modulo4.intro.Persona</class>
		<class>app.models.Cliente</class>
		<class>app.models.CuentaBancariaMonedaExtranjera</class>
		<class>app.models.CuentaBancariaMonedaNacional</class>
		<class>app.models.Direccion</class>
		<class>app.models.MovimientoDeposito</class>
		<class>app.models.MovimientoExtraccion</class>
		<class>app.models.MovimientoVentaMonedaExtranjera</class>
		<class>app.models.MovimientoCompraMonedaExtranjera</class>
		<class>app.models.MovimientoTransferenciaRealizada</class>
		<class>app.models.MovimientoTransferenciaRecibida</class>
		<exclude-unlisted-classes />
		<properties>
			<property name="javax.persistence.jdbc.driver"
				value="org.h2.Driver" />
			<property name="javax.persistence.jdbc.url"
				value="jdbc:h2:tcp://localhost/~/test" />
			<property name="javax.persistence.jdbc.user" value="sa" />
			<property name="javax.persistence.jdbc.password" value="123" />
			<property
				name="javax.persistence.schema-generation.database.action"
				value="drop-and-create" />
			<property
				name="javax.persistence.schema-generation.scripts.action"
				value="create" />
			<property
				name="javax.persistence.schema-generation.scripts.create-target"
				value="META-INF/create.sql" />
<!-- 			<property -->
<!-- 				name="javax.persistence.schema-generation.create-source" -->
<!-- 				value="META-INF/create.sql" /> -->
<!-- 			<property -->
<!-- 				name="javax.persistence.schema-generation.drop-source" -->
<!-- 				value="META-INF/drop.sql" /> -->
		</properties>
	</persistence-unit>
</persistence>